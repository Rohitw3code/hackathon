<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.NewHome.SendRequestActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/send_request_toolbar"
            style="@style/ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:subtitle="Send request to get instant support"
            app:subtitleTextColor="@color/white"
            app:title="Overview"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:backgroundTint="@color/black"
        android:background="@drawable/round_blue"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/round_blue">

            <TextView
                style="@style/NormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Problem Statement"
                android:textSize="20sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/ps_send_request"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12sp"
            android:background="@drawable/round_blue"
            android:padding="10sp"
            android:text="@string/problem_statements"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:orientation="vertical">

        <TextView
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_blue"
            android:padding="10sp"
            android:text="Category"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/category_send_request"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:text="#Android_app #Python"
            android:textColor="@color/bottomBarInActive"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_send_request"
        android:layout_width="65sp"
        android:layout_height="65sp"
        android:layout_margin="10sp"
        android:src="@drawable/logo2" />

    <ProgressBar
        android:id="@+id/progress_send_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginHorizontal="100sp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"/>

    <TextView
        android:id="@+id/ask_btn_send_request"
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="50sp"
        android:background="@drawable/round_auth"
        android:textSize="20sp"
        android:padding="15sp"
        android:text="Ask/Request" />


</LinearLayout>