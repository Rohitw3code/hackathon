<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Laper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/purple_200</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="CCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/black</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OppositeText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextColor1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextColorG1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="TextColor2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="actionMenuTextColor">#1bff3a</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>
        <item name="selectableItemBackground">@color/blue_dark</item>
        <item name="selectableItemBackgroundBorderless">@color/blue</item>
        <!--        <item name="colorControlHighlight">@color/accentColor</item>-->
    </style>


</resources>